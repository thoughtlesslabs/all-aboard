-- update functions

function updatestart()
	if btnp(4) then
		mode="game"
	end
end

function updategame()
	moveplayer()
	if btnp(4) then
		mode="gameover"
	end
end

function updategameover()
	if btnp(4) then
		mode="start"
	end
end

