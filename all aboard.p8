-- characters

function player()
	p={}
	p.x=0
	p.y=0
	p.f=false
	p.d=8
end

function drawplayer()
	spr(0,p.x+p.d,p.y,1,1,p.f)
	spr(16,p.x,p.y,1,1,p.f)
end

function moveplayer()
	if btnp(0) then
		p.x-=1
		p.f=true
		p.d=-8
	end
	if btnp(1) then
		p.x+=1
		p.f=false
		p.d=8
	end
end
